<div class="col-xs-12" id='newPersonForm'>
  <%= simple_form_for(@person, remote: true) do |f| %>
    <% if @person.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>
        <ul>
        <% @person.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <div class="row">
        <div class="col-xs-6 " >
          <%= f.input :first_name, input_html: { class: 'form-control'}, placeholder: 'First name', label: false, required: true %>
        </div>
        <div class="col-xs-6 " >
          <%= f.input :last_name, input_html: { class: 'form-control'}, placeholder: 'Last name', label: false, required: true %>
        </div>
      </div>
    </div>
    
    <div class="actions col-xs-10">
      <%= f.button :submit, "Submit", class: "col-xs-10 col-xs-offset-1 btn-info "%>
    </div>
  <% end %>
</div>
